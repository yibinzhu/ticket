<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_margin="20dp">
    <ImageView
        android:src="@drawable/ic_image_background"
        android:layout_marginRight="20dp"
        android:id="@+id/ticket_postImg"
        android:layout_width="70dp"
        android:layout_height="90dp" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <TextView
            android:paddingTop="10dp"
            android:textColor="@color/t1_black_01"
            android:text="공연이름"
            android:layout_marginBottom="10dp"
            android:id="@+id/ticket_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                android:textColor="@color/t1_blue_01"
                android:id="@+id/play_time"
                android:text="공연시간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!--<TextView-->
                    <!--android:id="@+id/ticket_type"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="좌석정보" />-->
                    <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                    android:id="@+id/ticket_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/ticket_mark"
                android:textAlignment="center"
                android:textSize="8dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circle"
                android:layout_gravity="end"
                android:text="선물하기"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
