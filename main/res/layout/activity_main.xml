<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerLayout"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
        android:scaleType = "centerCrop"
        android:id="@+id/ticket_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
        <RelativeLayout
            android:background="@color/t1_dark_blue"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageButton
                android:id="@+id/btn_nav"
                android:tint="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/t1_dark_blue"
               android:layout_alignParentRight="true"
                android:src="@drawable/ic_info_t_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
            android:layout_marginTop="10dp"
            android:id="@+id/horizontal_cycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:icvp_interpolator="@android:anim/accelerate_interpolator"
            app:icvp_scroll_duration="250"
            app:icvp_center_page_scale_offset="5dp"
            app:icvp_max_page_scale="0.8"
            app:icvp_min_page_scale="0.55"
            app:icvp_medium_scaled="false"/>
        <com.youth.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            app:image_scale_type="fit_xy"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            app:delay_time="4000"
            android:layout_height="90dp" />
    </RelativeLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        app:headerLayout="@layout/navigation_header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>
    <WebView
        android:visibility="gone"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </WebView>
</android.support.v4.widget.DrawerLayout>